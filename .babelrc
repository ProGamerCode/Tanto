{
  "presets": ["react", "es2015", "stage-2"],

  "plugins": [
    "lodash",
    "transform-runtime",
    "add-module-exports",
    "transform-react-inline-elements"
  ],

  "env": {
    "development": {
      "plugins": [
        ["react-transform", {
          "transforms": [{
              "transform": "react-transform-catch-errors",
              "imports": ["react", "redbox-react"]
            },
            {
              "transform": "react-transform-hmr",
              "imports": ["react"],
              "locals": ["module"]
            }
          ]
        }]
      ]
    }
  }
}
